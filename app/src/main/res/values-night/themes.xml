<resources>

    <style name="Theme.DailyTasks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ebony</item>
        <item name="colorPrimaryVariant">@color/ebony_light</item>
        <item name="colorSecondary">@color/scooter</item>
        <item name="colorSecondaryVariant">@color/dodger_blue</item>
        <item name="colorSurface">@color/ebony_light</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/Theme.DailyTasks.TransparentActionBar</item>

        <item name="materialAlertDialogTheme">@style/Theme.DailyTasks.Dialog</item>

        <item name="android:ambientShadowAlpha">0.4</item>
        <item name="android:spotShadowAlpha">0.8</item>

        <item name="colorTaskIconIncompleteBg">@color/ebony_light</item>
        <item name="colorTaskIconCompleteBg">@color/ebony</item>
        <item name="colorTaskCompletePrimary">@color/bright_gray</item>
        <item name="colorTaskCompleteSecondary">@color/bright_gray</item>
    </style>
</resources>